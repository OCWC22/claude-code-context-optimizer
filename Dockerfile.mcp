# CCv3 MCP Server - Docker deployment
# Self-hosted MCP server for Claude Code integration

FROM python:3.12-slim

LABEL maintainer="CCv3 Hackathon"
LABEL description="MCP server for CCv3 context engineering with Voyage AI embeddings"

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set working directory
WORKDIR /app

# Copy dependency files first (for layer caching)
COPY pyproject.toml uv.lock* ./

# Install dependencies using uv
RUN uv sync --frozen --no-dev || uv sync --no-dev

# Copy source code
COPY *.py ./
COPY sandbox/ ./sandbox/
COPY evals/ ./evals/

# Create data directory for embeddings cache
RUN mkdir -p /app/data

# Environment variables (can be overridden at runtime)
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Expose ports
# 8000 - HTTP API (FastAPI)
# 3000 - MCP stdio bridge (if using HTTP transport)
EXPOSE 8000 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import asyncio; from atlas import Atlas; asyncio.run(Atlas().connect())" || exit 0

# Default command: Run MCP server in stdio mode
# Override with: docker run ... python api.py (for HTTP mode)
CMD ["uv", "run", "python", "mcp_server_standalone.py"]
